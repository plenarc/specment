{
  "name": "specment",
  "version": "0.1.5",
  "private": true,
  "license": "MIT",
  "scripts": {
    "check": "exec biome check --apply .",
    "format": "exec biome format . --write",
    "lint": "exec biome lint .",
    "lint:fix": "exec biome lint . --fix",
    "docs:start": "pnpm --filter @specment/docs start",
    "docs:build": "pnpm --filter @specment/docs build",
    "docs:serve": "pnpm --filter @specment/docs serve",
    "specment:build": "pnpm --filter @plenarc/specment build",
    "build:all": "pnpm --filter @plenarc/specment build && pnpm --filter @specment/docs build",
    "typecheck": "tsc",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm specment:build && changeset publish",
    "changeset:status": "changeset status",
    "release": "pnpm changeset:version && pnpm changeset:publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.2.1",
    "typescript": "~5.9.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "core-js",
      "core-js-pure"
    ],
    "onlyBuiltDependencies": [
      "core-js-pure"
    ]
  }
}