{
  "name": "@plenarc/specment",
  "version": "0.1.5",
  "description": "A CLI tool for managing specification documents and templates",
  "type": "module",
  "author": "Plenarc",
  "license": "MIT",
  "main": "./bin/specment.js",
  "bin": {
    "specment": "./bin/specment.js"
  },
  "keywords": [
    "cli",
    "documentation",
    "specification",
    "template",
    "generator"
  ],
  "homepage": "https://github.com/plenarc/specment#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/plenarc/specment.git",
    "directory": "packages/specment"
  },
  "bugs": {
    "url": "https://github.com/plenarc/specment/issues"
  },

  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "check": "biome check --apply .",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^24.2.1",
    "typescript": "~5.9.2",
    "vitest": "^1.0.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22.0"
  },
  "files": [
    "bin",
    "templates",
    "recipes",
    "migrations",
    "assets",
    "README.md"
  ],
}